{{ ansible_managed | comment }}

[Unit]
Description=Confluence
After=network.target

[Service]
Type=forking
User={{ confluence__username }}
PIDFile={{ confluence__application_path }}/work/catalina.pid
ExecStart={{ confluence__application_path }}/bin/start-confluence.sh
ExecStop={{ confluence__application_path }}/bin/stop-confluence.sh

[Install]
WantedBy=multi-user.target